{{!--
  This partial renders the detailed explanation section of a type or member.
  @param {object} member - The member to render the explanation for.
  @param {number} level - The heading level to use for subheadings.
--}}

<div class="doc-summary">
  {{#if (and member.doc.summary.isEmpty member.metadata.isDefaultConstructor)}}
  Initializes a new instance of {{member.declaringType}} {{#lowercase (memberCategory member.declaringType)}}.
  {{else}}
  {{member.doc.summary}}
  {{/if}}
</div>

<pre dir="ltr"><code class="language-{{member.context.language.identifier}}">{{#memberDefinition member}}</code></pre>

{{> (lowercase (memberCategory member))}}

{{#if member.doc.permissions}}
<h{{level}} id="permissions">Permissions</h{{level}}>
{{>reference_list member.doc.permissions}}
{{/if}}

{{#if member.doc.events}}
<h{{level}} id="events">Events</h{{level}}>
{{>reference_list member.doc.events}}
{{/if}}

{{#if member.doc.exceptions}}
<h{{level}} id="exceptions">Exceptions</h{{level}}>
{{>reference_list member.doc.exceptions}}
{{/if}}

{{#unless member.doc.remarks.isEmpty}}
<h{{level}} id="remarks">Remarks</h{{level}}>
<div class="doc-comment">
  {{member.doc.remarks}}
</div>
{{/unless}}

{{#unless member.doc.example.isEmpty}}
<h{{level}} id="examples">Examples</h{{level}}>
<div class="doc-comment">
  {{member.doc.example}}
</div>
{{/unless}}
