{{!--
  This partial renders the modal dialog of the page.
  @param {object} this - The template context
--}}

<div id="modal-overlay" class="modal-overlay" role="dialog" aria-modal="true" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-container">
    <div class="modal-header">
      <h3 id="modal-title"></h3>
      <button id="modal-close" type="button" class="modal-close-btn" aria-label="Close dialog">&times;</button>
    </div>
    <div class="modal-content">
      <div id="modal-body" class="modal-body">
        <iframe id="modal-iframe" frameborder="0" title="Dialog content"></iframe>
      </div>
    </div>
  </div>
</div>
